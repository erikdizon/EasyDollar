<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - EasyDollar</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700%7CVarela+Round" rel="stylesheet">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/ui-bootstrap-csp.css" rel="stylesheet" />
    <link href="~/Content/Dragula/dragula.css" rel="stylesheet" />
    <link href="~/Content/sweetalert.css" rel="stylesheet" />
    <link href="~/Content/owl.carousel.css" rel="stylesheet" />
    <link href="~/Content/owl.theme.default.css" rel="stylesheet" />
    <link href="~/Content/magnific-popup.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body ng-app="FinanceProject">

    <!-- Nav -->
    <nav id="nav" class="navbar">
        <div class="container">
            <div class="navbar-header">
                <!-- Collapse nav button -->
                <div class="nav-collapse">
                    <span></span>
                </div>
                <!-- /Collapse nav button -->
            </div>
            <!--  Main navigation  -->
            <ul class="main-nav nav navbar-nav navbar-right">
                <li><a href="/Home/Index">Home</a></li>
                <li class="has-dropdown">
                    <a href="#cards">Top Credit Cards</a>
                    <ul class="dropdown">
                        <li><a href="/CreditCards/TopCashBack">Cash Back</a></li>
                        <li><a href="/CreditCards/TopTravel">Travel</a></li>
                        <li><a href="/CreditCards/TopBalanceTransfer">Balance Transfer</a></li>
                    </ul>
                </li>
                <li class="has-dropdown">
                    <a href="#">Product Highlights</a>
                    <ul class="dropdown">
                        <li><a href="/ProductHighlights/CreditCards">Credit Cards</a></li>
                        <li><a href="/ProductHighlights/ProductManager">Product Manager</a></li>
                    </ul>
                </li>
                <li><a href="/Home/Login">Log In/Sign Up</a></li>
            </ul>
            <!-- /Main navigation -->
        </div>
    </nav>
    <!-- /Nav -->

    @RenderBody()

    <hr />
    <footer id="footer" class="sm-padding bg-dark">
        <!-- footer copyright -->
        <div class="footer-copyright">
            <p>Copyright © 2017. All Rights Reserved. Designed by <a href="https://colorlib.com" target="_blank">Colorlib</a></p>
        </div>
        <!-- /footer copyright -->
    </footer>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/Dragula/angularjs-dragula.js"></script>
    <script src="~/Scripts/app/app.js"></script>
    <script src="~/Scripts/js/ui-bootstrap.js"></script>
    <script src="~/Scripts/js/ui-bootstrap-tpls.js"></script>   
    <script src="~/Scripts/js/sweetalert.min.js"></script>
    <script src="~/Scripts/js/owl.carousel.min.js"></script>
    <script src="~/Scripts/js/jquery.magnific-popup.js"></script>
    <script src="~/Scripts/js/main.js"></script>
    <script src="~/Services/Tools/apiRequestService.js"></script>
    @RenderSection("scripts", false);

</body>
</html>